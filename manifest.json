{
  "name": "Focus for Whatsapp Web",
  "version": "1.0",
  "description": "Reclaim your productivity.",
  "manifest_version": 2,
  "permissions": [
    "storage", "activeTab", "https://web.whatsapp.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "background": {
    "scripts": [
      "content-scripts-register-polyfill.js",
      "background.js"
    ],
    "persistent": false
  }
}